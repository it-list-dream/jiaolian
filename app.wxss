/* 自定义 radio 样式 */
radio{
    width: 38rpx;
}
 
radio .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
}
/* 选中的对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 44rpx; 
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx; 
    color:#fff; 
    background: #2facff;
    border-color: #2facff;
}
view {
  box-sizing: border-box;
}
/* 插件样式 */
.calendar {
    background-color:white;  
    padding-top: 10px; 
}
.mod{
  position: fixed;
  top: 0rpx;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 10;
}
.calendar-header{
   
  font-size: large;
  color: #59518d;

 
}
.calendar{

   border-radius:0px 0px 16px 16px;
}
.calendar-board{
  color: #c7cbe2;
   font-weight: bold;
}
.container {
  z-index: 1000;
height: 100%;
display: block;
box-sizing: border-box;
}

.calendar--calendar{
  padding: 30rpx 50rpx;
}



 .mydate {
  height: 100rpx;
  display: flex;
  padding: 0 60rpx;
  justify-content: space-between;
}

 .mydate .everyday{ 
width:100rpx;
height:100rpx;
 background:rgba(242,244,248,1);
border-radius:4rpx;

}  
 .mydate .everyday.active{
 background:rgba(48, 122, 245, 1);
} 
 .mydate .everyday.active view{
  color: white;
}
 .mydate .everyday view{
  font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(153,153,153,1);
text-align: center;
}
 .mydate .everyday view:nth-child(1){
margin-top: 18rpx;
}
 .mydate .rili{

width:100rpx;
height:100rpx;
border-radius:4rpx;
text-align: center;
line-height: 140rpx;
}
.bg1{
  background:rgba(48, 122, 245, 1);
}
.bg2{
  background:rgba(242,244,248,1);
}
 .mydate .rili image{
width:76rpx;
height:72rpx;
border-radius:4rpx;
}
