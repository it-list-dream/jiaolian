.changepwd{
  position: fixed;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  background-color: rgba(242,244,248,1);
}
.mypwd{
  margin-top: 24rpx;
  height: 270rpx;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding: 0 60rpx;
}
.mypwd view{
  flex: 1;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(244,244,244,1);
}
.mypwd view input{
  height: 40rpx;
  font-size:28rpx;
font-family:PingFangSC-Regular,PingFangSC;
font-weight:400;
color:rgba(153,153,153,1);
}
.changepwd .confirm{
  margin-top: 24rpx;
  width:100%;
height:90rpx;
background:rgba(255,255,255,1);
font-size:14px;
font-family:PingFangSC-Medium,PingFangSC;
font-weight:500;
color:rgba(48,122,245,1);
display: flex;
align-items: center;
justify-content: center;
}